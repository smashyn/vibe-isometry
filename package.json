{
    "name": "vibe-isometry",
    "version": "1.0.0",
    "description": "A simple TypeScript game project using a canvas rendering engine.",
    "main": "src/index.ts",
    "scripts": {
        "dev": "vite --port 5000",
        "build": "vite build",
        "start": "npm run build && vite preview --port 5000",
        "server": "ts-node server/server.ts",
        "dev:server": "nodemon --watch server --ext ts --exec ts-node server/server.ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "devDependencies": {
        "@types/ws": "^8.18.1",
        "concurrently": "^9.2.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.3"
    },
    "keywords": [
        "game",
        "typescript",
        "canvas",
        "copilot"
    ],
    "author": "Stanislav Mashyn",
    "license": "ISC",
    "dependencies": {
        "uuid": "^11.1.0",
        "ws": "^8.18.3"
    }
}
